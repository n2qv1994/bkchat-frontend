<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="<%= data.host %>/plugins/datatables/dataTables.bootstrap.css">
    <link rel="stylesheet" href="<%= data.host %>libs/dist/css/AdminLTE.min.css">
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="<%= data.host %>libs/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- custom -->
    <link rel="stylesheet" href="<%= data.host %>stylesheets/direct_chat.css">
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <header class="main-header">
        <% include ../partials/header %>
      </header>
      <aside class="main-sidebar">
        <% include ../partials/side_menu_management %>
      </aside>
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Meeting Management
          </h1>
          <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="/management/meeting_managemant">Meeting Management</a></li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-12">
              <!-- Custom Tabs -->
              <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                  <li class="<% if(data.tab === 'upcomming' || data.tab === undefined) { %> active <% } %>"><a href="/management/meeting_managemant/upcomming">Upcoming Meetings</a></li>
                  <li class="<% if(data.tab === 'previous') { %> active <% } %>"><a href="/management/meeting_managemant/meeting">Previous Meetings</a></li>
                  <li class="<% if(data.tab === 'schedule') { %> active <% } %>"><a href="/management/meeting_managemant/schedule">Schedule Meetings</a></li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane <% if(data.tab === 'upcomming' || data.tab === undefined) { %> active <% } %>" id="comming">
                    <div class="box-body no-padding" style="margin-top:15px">
                      <table class="table table-condensed" id="upcomming_table">
                        <thead>
                          <tr>
                            <th style="width: 150px">Start Time</th>
                            <th>Topic</th>
                            <th>Meeting ID</th>
                            <th style="width: 150px"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i = 0; i < data.meeting.length; i++) { %>
                            <tr>
                              <td><%= data.meeting[i].started_at %></td>
                              <td><a href="/management/meeting_managemant/<%= data.meeting[i].room_code %>"><%= data.meeting[i].room_name %></a></td>
                              <td><%= data.meeting[i].room_code %></td>
                              <td>
                                <a class="btn btn-danger">Delete</a>
                              </td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <!-- /.tab-pane -->
                  <div class="tab-pane <% if(data.tab === 'previous') { %> active <% } %>" id="previous">
                    <div class="box-body no-padding" style="margin-top:15px">
                      <table class="table table-condensed" id="previous_table">
                        <thead>
                          <tr>
                            <th style="width: 150px">Start Time</th>
                            <th>Topic</th>
                            <th>Meeting ID</th>
                            <th style="width: 100px"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i = 0; i < data.previous_meeting.length; i++) { %>
                            <tr>
                              <td><%= data.previous_meeting[i].started_at %></td>
                              <td><a href="/management/meeting_managemant/<%= data.previous_meeting[i].room_code %>"><%= data.previous_meeting[i].room_name %></a></td>
                              <td><%= data.previous_meeting[i].room_code %></td>
                              <td>
                                <a class="btn btn-danger">Delete</a>
                              </td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <!-- /.tab-pane -->
                  <div class="tab-pane <% if(data.tab === 'schedule') { %> active <% } %>" id="schedule">
                    <div class="box-body no-padding" style="margin-top:15px">
                      <table class="table table-condensed" id="schedule_table">
                        <thead>
                          <tr>
                            <th style="width: 150px">Start Time</th>
                            <th>Topic</th>
                            <th>Meeting ID</th>
                            <th style="width: 150px"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i = 0; i < data.schedule_meeting.length; i++) { %>
                            <tr>
                              <td><%= data.schedule_meeting[i].started_at %></td>
                              <td><a href="/management/meeting_managemant/<%= data.schedule_meeting[i].room_code %>"><%= data.schedule_meeting[i].room_name %></a></td>
                              <td><%= data.schedule_meeting[i].room_code %></td>
                              <td>
                                <a class="btn btn-danger">Delete</a>
                              </td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
              </div>
            <!-- nav-tabs-custom -->
            </div>
          <!-- /.col -->
          </>
        </section>
      </div>
      <div class="rows" id="chat-box">
      <div id="send-message">
          <a href="#">
              <i class="fa fa-comments" id="icon-message-bottom" style="margin-left: 10px;font-size:40px; color:white; position:relative; top:15%"></i>
          </a>
      </div>
      <div id="fixed-bottom">
          <div id='chat-box-bottom' style="display: none">
            <!-- DIRECT CHAT PRIMARY -->
            <div class="box box-primary direct-chat direct-chat-primary">
              <div class="box-header with-border">
                <h3 class="box-title" id="direct_name"></h3>

                <div class="box-tools pull-right">
                  <span data-toggle="tooltip" title="3 New Messages" class="badge bg-light-blue">3</span>
                  <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle">
                    <i class="fa fa-comments"></i></button>
                  <button  id="close" type="button" class="btn btn-box-tool"><i class="fa fa-times"></i></button>
                </div>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <!-- Conversations are loaded here -->
                <div class="direct-chat-messages" id="direct-chat-messages">
                </div>
                <!--/.direct-chat-messages-->
                <!-- /.direct-chat-pane -->
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                  <div class="input-group">
                    <input id ="text-message" type="text" name="message" placeholder="Type Message ..." class="form-control">
                        <span class="input-group-btn">
                          <button class="btn btn-primary btn-flat" onclick="send()">Send</button>
                        </span>
                  </div>
              </div>
              <!-- /.box-footer-->
            </div>
            <!--/.direct-chat -->
          </div>
      </div>
      </div>
       <div class="modal fade" id="myModal" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
          <div class="modal-content" style="border-radius: 2%;background-color: #000000;">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Direct Call</h4>
            </div>
            <div class="modal-body">
              <img id="notify_img" class="col-md-8 col-md-offset-2" src="" style="border-radius: 50%">
              <p id="notify_call" class="col-md-10 col-md-offset-1" style="font-size: 18px;font-style: oblique;"></p>
              <p id="user_name_call" style="display: none;"></p>
            </div>
            <div class="modal-footer col-md-offset-2" style="display: inline-block;">
              <button id="accept" type="button" class="btn btn-success" data-dismiss="modal" style="display: none; width: 80px" onclick="accept_call()"><i class="fa fa-phone" aria-hidden="true"></i></button>
              <button id="refuse" type="button" class="btn btn-danger" data-dismiss="modal" style="display: none; width: 80px" onclick="refuse_call()"><i class="fa fa-phone" aria-hidden="true"></i></button>
              <button id="cancel" type="button" class="btn btn-danger" data-dismiss="modal" style="display: none; width: 80px; margin-left: 45px" onclick="cancel_call()"><i class="fa fa-phone" aria-hidden="true"></i></button>
            </div>
          </div>
        </div>
      </div>
      <footer class="main-footer">
      </footer>
    </div>
     <script src="<%= data.host %>javascripts/config.js"></script>
    <!-- jQuery 2.2.3 -->
    <script src="<%= data.host %>plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="<%= data.host %>bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="<%= data.host %>plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="<%= data.host %>plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="<%= data.host %>plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="<%= data.host %>plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="<%= data.host %>libs/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="<%= data.host %>libs/dist/js/demo.js"></script>
    <!-- page script -->
    <script src="<%= data.host %>socket.io-client/dist/socket.io.js"></script>
    <script src="<%= data.host %>javascripts/socket_service.js"></script>
    <!-- custom -->
    <script src="<%= data.host %>javascripts/direct_chat.js"></script>
    <script>
      $(function () {
        $('#upcomming_table').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": true,
          "ordering": false,
          "info": true,
          "autoWidth": false
        });
        $('#previous_table').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": true,
          "ordering": false,
          "info": true,
          "autoWidth": false
        });
        $('#schedule_table').DataTable({
          "paging": true,
          "lengthChange": false,
          "searching": true,
          "ordering": false,
          "info": true,
          "autoWidth": false
        });
      });
    </script>
  </body>
</html>

<script type="text/javascript">

var user_name = "<%- data.user.user_name %>";
var image     = "<%- data.user.image %>";

init(user_name);
function accept_call() {
    $("#accept").hide();
    $("#refuse").hide();
    $("#cancel").hide();
    var data = {
      from: {
        user_name:user_name,
        image: image
      },
      to: $("#user_name_call").text(),
      status: "accept",
    };
    sound_ringing.pause();
    sound_ringing.currentTime = 0;
    // window.location.replace("<%- data.host %>call");
    emit("call", JSON.stringify({ "data": data }));
  };

  function refuse_call() {
    $("#accept").hide();
    $("#refuse").hide();
    $("#cancel").show();
    sound_ringing.pause();
    sound_ringing.currentTime = 0;
    var data = {
      from: {
        user_name:user_name,
        image: image
      },
      to: $("#user_name_call").text(),
      status: "refuse",
    };
    emit("call", JSON.stringify({ "data": data }));
  };

  function cancel_call() {
    $("#accept").hide();
    $("#refuse").hide();
    $("#cancel").hide();
    var data = {
      from: {
        user_name:user_name,
        image: image
      },
      to: $("#user_name_call").text(),
      status:"cancel"
    };
    emit("call", JSON.stringify({ "data": data }));
  };
  
  on("call", function(message) {
    $("#accept").hide();
    $("#refuse").hide();
    $("#cancel").hide();
    var data_res = JSON.parse(message).data;
    if(data_res.status === "accept") {
      window.location.replace("<%- data.host %>call");
    }
    else if (data_res.status === "refuse") {
      $("#myModal").modal('show');
      $("#notify_call").text("refuse your call");
    }
    else {
      sound_ringing.pause();
      sound_ringing.currentTime = 0;
      $("#accept").hide();
      $("#refuse").hide();
      $("#cancel").hide();
      $("#myModal").modal("hide");
    }
  });
</script>