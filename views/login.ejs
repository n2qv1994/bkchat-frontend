<!Doctype html>
<html>
<head>
  <% include ./partials/head %>
</head>
<body>
  <section class="container">
    <section class="logo-container col-md-offset-5">
      <div class="logo">
        <img alt="" src="/images/SoICT_ logo.png"/>
      </div>
    </section>
    <section class="page-title">
      <div class="sub-content col-md-offset-5">
        <h1>Sign in</h1>
      </div>
    </section>
    <section class="login-container">
      <div class="login-form col-md-offset-3 col-md-5">
        <% if(data.message.length > 0) { %>
          <div class="alert alert-danger alert-white rounded">
            <div class="icon">
              <i class="fa fa-times-circle"></i>
            </div>
            <p><%= data.message %></p>
          </div>
        <% } %>
        <form name="form" role="login" action="/login" method="post">
          <section>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="text-primary glyphicon glyphicon-user"></span></div>
                <input type="text" name="username" placeholder="User name" value="<%= data.user.username %>" required class="form-control"/>
              </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><span class="text-primary glyphicon glyphicon-lock"></span></div>
                <input type="password" name="password" placeholder="Pass word" value="<%= data.user.password %>" required class="form-control"/>
              </div>
            </div>

            <button type="submit" name="go" class="btn btn-block btn-primary">Sign in</button>
          </section>
        </form>
      </div>
    </section>
    <section class="other-container" style="margin-top: 20px">
      <div class="col-md-5 col-md-offset-5">
        <a href="#">Forgot password</a>
      </div>
    </section>
  </section>
</body>
</html>
